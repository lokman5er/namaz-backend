{
    "compilerOptions": {
        "target": "ES5",
        "module": "ES6",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "lib": ["es5", "es2015.promise", "dom", "es2018"],
        "typeRoots": [
          "node_modules/@types"
        ],
        "outDir": "dist",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "sourceMap": true
    },
    "include": [
        "./src/**/*",
    ],
    "exclude": [
        "node_modules",
    ],
}
