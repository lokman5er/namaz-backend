{
    "compilerOptions": {
        "target": "ES5", // Kompilieren zu ES5 für breite Browser-Kompatibilität
        "module": "ES6", // Verwenden von ES6 Modulen
        "strict": true, // Aktivieren Sie alle strengen Typ-Prüfungen
        "esModuleInterop": true, // Ermöglicht den Import von CommonJS-Modulen in ES6-Modulen
        "skipLibCheck": true, // Überspringt die Typ-Prüfung von .d.ts-Dateien, um den Build zu beschleunigen
        "lib": ["es5", "es2015.promise", "dom", "es2018"],
        "typeRoots": [
          "node_modules/@types"
        ],
        "outDir": "dist",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "sourceMap": true
        // "outDir": "./dist", // NICHT notwendig, da Webpack die Ausgabe verwaltet
    },
    "include": [
        "./src/**/*", // Pfad zu den TypeScript-Dateien, die kompiliert werden sollen
    ],
    "exclude": [
        "node_modules", // Standardmäßig ausschließen
    ],
}
