{
    "name": "namazbackend",
    "version": "1.0.0",
    "description": "",
    "main": "./dist/index.js",
    "scripts": {
        "hotstart": "concurrently \"npm:watch1\" \"npm:start1\" \"npm run browser-sync\"",
        "browser-sync": "browser-sync start --config browser-sync-config.js",
        "start1": "ts-node src/index.ts",
        "watch1": "webpack --watch",
        "build1": "webpack",
        "copy": "cpy 'frontend/public/**/*' ./dist/frontend/public/ --cwd=./ --parents && cpy 'frontend/**/*.html' 'frontend/**/*.css' ./dist/frontend/ --cwd=./ --parents",
        "tsc": "tsc && tsc -p ./frontend",
        "delete-ts": "find ./dist -type f -name '*.ts' -exec rm {} +",
        "build": "npm run copy && npm run tsc && npm run delete-ts",
        "start": "node .",
        "run-daily-task": "node fetchDiyanetData.js",
        "debug": "nodemon --exec \"node --inspect-brk=0.0.0.0:9229 --require ts-node/register index.ts\""
    },
    "author": "lokman5er",
    "license": "ISC",
    "dependencies": {
        "axios": "^1.6.7",
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.20.2",
        "cheerio": "^1.0.0-rc.12",
        "cors": "^2.8.5",
        "d3": "^7.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.18.2",
        "hijri": "^0.5.0",
        "htmlparser2": "^9.0.1",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^8.1.1",
        "path": "^0.12.7",
        "request": "^2.88.2",
        "telegraf": "^4.15.3",
        "util": "^0.12.5"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/cors": "^2.8.17",
        "@types/d3": "^7.4.3",
        "@types/express": "^4.17.21",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/mongoose": "^5.11.97",
        "@types/node": "^20.11.19",
        "@types/request": "^2.48.12",
        "@typescript-eslint/eslint-plugin": "^6.19.1",
        "@typescript-eslint/parser": "^6.19.1",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-config-standard-with-typescript": "^43.0.1",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-n": "^16.6.2",
        "eslint-plugin-promise": "^6.1.1",
        "nodemon": "^3.0.3",
        "prettier": "3.2.4",
        "ts-loader": "^9.5.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3",
        "webpack": "^5.90.3",
        "webpack-cli": "^5.1.4"
    }
}
